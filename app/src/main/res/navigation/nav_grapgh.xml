<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_grapgh"
    app:startDestination="@id/homefragment">

    <fragment
        android:id="@+id/homefragment"
        android:name="com.example.andy.Homefragment"
        android:label="fragment_homefragment"
        tools:layout="@layout/fragment_homefragment" >
        <action
            android:id="@+id/action_homefragment_to_create_request_fragment"
            app:destination="@id/create_request_fragment" />
        <action
            android:id="@+id/action_homefragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homefragment_to_sendEmailfragment"
            app:destination="@id/sendEmailfragment" />
    </fragment>
    <fragment
        android:id="@+id/sendEmailfragment"
        android:name="com.example.andy.sendEmailfragment"
        android:label="search_donor_fragment"
        tools:layout="@layout/search_donor_fragment" />
    <fragment
        android:id="@+id/create_request_fragment"
        android:name="com.example.andy.create_request_fragment"
        android:label="create_request_fragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.andy.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>