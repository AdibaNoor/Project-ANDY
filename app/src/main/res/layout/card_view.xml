<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#ff2156"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:contentPadding="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout"
        android:padding="16dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/card_image"
            android:src="@drawable/ic_baseline_image_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/card_text1"
            android:layout_width="236dp"
            android:layout_height="39dp"
            android:text="Name"
            app:layout_constraintLeft_toRightOf="@+id/card_image"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/card_text2"
            android:layout_width="236dp"
            android:layout_height="20dp"
            android:text="Email"
            app:layout_constraintLeft_toRightOf="@+id/card_image"
            app:layout_constraintTop_toBottomOf="@id/card_text1"  />
        <TextView
            android:id="@+id/card_text3"
            android:layout_width="236dp"
            android:layout_height="20dp"
            android:text="Blood Group"
            app:layout_constraintLeft_toRightOf="@+id/card_image"
            app:layout_constraintTop_toBottomOf="@id/card_text2"  />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>